@model KN_ProyectoWeb.Models.Usuario


<div class="row">

    <div class="col-xl-1">
    </div>

    <div class="col-xl-10">

        <div class="card mb-4 mt-4">

            @if (ViewBag.Mensaje != null)
            {
                <div class="alert alert-primary text-center">
                    @ViewBag.Mensaje
                </div>
            }

            <h5 class="card-header">Información de Seguridad</h5>

            @using (Html.BeginForm("CambiarAcceso", "Usuario", FormMethod.Post, new { @id = "FormSeguridad" }))
            {
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label">Contraseña</label>
                        @Html.TextBoxFor(x => x.Contrasenia, new { @class = "form-control", @type = "password" })
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirmar Contraseña</label>
                        @Html.TextBoxFor(x => x.ContraseniaConfirmacion, new { @class = "form-control", @type = "password" })
                    </div>

                    <div class="d-flex justify-content-end">
                        <button class="btn btn-primary d-grid w-25" type="submit">Procesar</button>
                    </div>
                </div>
            }

        </div>

    </div>
</div>

<script src="~/StaticFiles/js/Seguridad.js"></script>
